{
  "version": "1.0.0",
  "databases": {
    "goals": {
      "title": "Goals",
      "icon": "üéØ",
      "description": "Multi-level goal tracking with progress analytics",
      "properties": {
        "Name": { "type": "title" },
        "Status": {
          "type": "select",
          "options": ["Not Started", "In Progress", "On Hold", "Completed", "Abandoned"]
        },
        "Goal Type": {
          "type": "select",
          "options": ["Annual", "Quarterly", "Monthly", "Weekly", "Daily"]
        },
        "Progress": { "type": "number", "format": "percent" },
        "Start Date": { "type": "date" },
        "Target Date": { "type": "date" },
        "Category": {
          "type": "multi_select",
          "options": ["Career", "Health", "Finance", "Personal", "Relationships", "Learning"]
        },
        "Priority": {
          "type": "select",
          "options": ["Critical", "High", "Medium", "Low"]
        }
      },
      "formulas": {
        "Days Remaining": "dateBetween(prop(\"Target Date\"), now(), \"days\")",
        "Expected Progress": "(dateBetween(now(), prop(\"Start Date\"), \"days\") / dateBetween(prop(\"Target Date\"), prop(\"Start Date\"), \"days\")) * 100",
        "On Track": "if(prop(\"Progress\") >= prop(\"Expected Progress\"), \"‚úÖ\", \"‚ö†Ô∏è\")"
      },
      "relations": {
        "Parent Goal": "goals",
        "Sub-goals": "goals",
        "Action Items": "tasks",
        "Related Workouts": "workouts"
      }
    },
    "tasks": {
      "title": "Tasks",
      "icon": "‚úÖ",
